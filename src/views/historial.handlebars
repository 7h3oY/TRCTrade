<div class="container-xxl" id="containerPrincipal">
  <h3>Historial Transacciones en TRC Traders</h3>
  <h5>Encuentra todas las trnasacciones realizadas con tu usuario Trader!</h5>

  <nav class="navbar" id="formBtons" >
    <h6 id="txtUser"></h6>
    <h6 id="textHistorial">Estas viendo tu historial de Pujas</h6>
  <form class="container-fluid justify-content-start" >
    <button class="btn btn-outline-success me-2" type="button" onclick="mostrarPujas()" id="btnPujas">Pujas Realizadas</button>
    <button class="btn btn-sm btn-outline-secondary" type="button" onclick="mostrarSubastas()" id="btonSubastas">Subastas Realizadas</button>
    <button class="btn btn-sm btn-outline-secondary" type="button" onclick="mostrarFinalizadas()" id="btonSubastas">Subastas Adquiridas</button>
  </form>
  </nav>
 <div class="row row-cols-1 row-cols-md-2" id="pujasRealizadas">
    {{#if historial}}
      {{#each historial}}
        <div class="col">
          <div class="card">
            <div class="row g-0" id="cardHistorial">
              <div class="col-md-4">
                <div class="image-column">
                  <h5 class="card-title">{{this.moto.marca}} {{this.moto.modelo}}</h5>
                  <img src="/Motos/resources/img/{{this.moto.id}}.png" class="card-img" alt="...">
                </div>
              </div>
              <div class="col-md-8">
                <div class="card-body"> 
                  <h5>Detalles de la Puja Realizada</h5>
                  <p class="card-text"><strong>Patente:</strong> {{this.moto.patente}}</p>
                  <p class="card-text"><strong>Ano:</strong>{{this.moto.ano}}</p>
                  <p class="card-text"><strong>Kilometraje:</strong> {{this.moto.kilometraje}}</p>
                  <p class="card-text"><strong>Vendedor: </strong> {{this.vendedor.nombre}} {{this.vendedor.apellido_pat}}</p>
                  <p class="card-text"><strong>Precio Minimo: </strong>{{this.moto.precio_minimo}}</p>
                  <p class="card-text"><strong>Monto Pujado:</strong> {{this.puja.monto}}</p>
                  <p class="card-text"><strong>Estado Publicacion</strong> {{this.moto.estado}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>

   <div class="row row-cols-1 row-cols-md-2" id="subastasRealizadas" hidden>
    {{#if subastas}}
      {{#each subastas}}
        <div class="col">
          <div class="card">
            <div class="row g-0" id="cardHistorial">
              <div class="col-md-4">
                <div class="image-column">
                  <h5 class="card-title">{{this.moto.marca}} {{this.moto.modelo}}</h5>
                  <img src="/Motos/resources/img/{{this.moto.id}}.png" class="card-img" alt="...">
                </div>
              </div>
              <div class="col-md-8">
                <div class="card-body"> 
                  <h5>Detalles de las Subasta Realizada</h5>
                  <p class="card-text"><strong>Patente:</strong> {{this.moto.patente}}</p>
                  <p class="card-text"><strong>Ano:</strong>{{this.moto.ano}}</p>
                  <p class="card-text"><strong>Kilometraje:</strong> {{this.moto.kilometraje}}</p>
                  <p class="card-text"><strong>Vendedor: </strong> {{this.usuario.nombre}} {{this.usuario.apellido_pat}}</p>
                  <p class="card-text"><strong>Precio Minimo: </strong>{{this.moto.precio_minimo}}</p>
                  <p class="card-text"><strong>Monto Venta:</strong> {{this.moto.precio_minimo}}</p>
                  <p class="card-text"><strong>Estado Publicacion</strong> {{this.moto.estado}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>

   <div class="row row-cols-1 row-cols-md-2" id="subastasTerminadas" hidden>
    {{#if terminadas}}
      {{#each terminadas}}
        <div class="col">
          <div class="card">
            <div class="row g-0" id="cardHistorial">
              <div class="col-md-4">
                <div class="image-column">
                  <h5 class="card-title">{{this.moto.marca}} {{this.moto.modelo}}</h5>
                  <img src="/Motos/resources/img/{{this.moto.id}}.png" class="card-img" alt="...">
                </div>
              </div>
              <div class="col-md-8">
                <div class="card-body"> 
                  <h5>Detalles de las Subasta Realizada</h5>
                  <p class="card-text"><strong>Patente:</strong> {{this.moto.patente}}</p>
                  <p class="card-text"><strong>Ano:</strong>{{this.moto.ano}}</p>
                  <p class="card-text"><strong>Kilometraje:</strong> {{this.moto.kilometraje}}</p>
                  <p class="card-text"><strong>Vendedor: </strong> {{this.usuario.nombre}} {{this.usuario.apellido_pat}}</p>
                  <p class="card-text"><strong>Precio Minimo: </strong>{{this.moto.precio_minimo}}</p>
                  <p class="card-text"><strong>Monto Venta:</strong> {{this.moto.pujaTotal}}</p>
                  <p class="card-text"><strong>Estado Publicacion</strong> {{this.moto.estado}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>


